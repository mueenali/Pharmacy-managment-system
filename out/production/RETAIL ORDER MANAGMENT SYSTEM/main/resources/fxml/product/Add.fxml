<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox maxHeight="500.0" maxWidth="600.0" minHeight="500.0" minWidth="600.0" prefHeight="500.0" prefWidth="600.0"
      stylesheets="@../../css/main.css" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="main.java.retail.order.controllers.product.AddProductController">
    <children>
        <HBox alignment="CENTER_RIGHT" maxHeight="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
              prefHeight="38.0" prefWidth="599.0" styleClass="top-bar" VBox.vgrow="NEVER">
            <children>
                <Button maxHeight="30.0" maxWidth="30.0" minHeight="30.0" mnemonicParsing="false"
                        onAction="#closeAction" prefHeight="30.0" prefWidth="30.0" styleClass="close-button"/>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
        </HBox>
        <HBox alignment="CENTER" prefHeight="110.0" prefWidth="640.0" styleClass="header" VBox.vgrow="NEVER">
            <VBox.margin>
                <Insets/>
            </VBox.margin>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
            <children>
                <Label styleClass="header-label" text="New Product"/>
            </children>
        </HBox>
        <VBox alignment="TOP_CENTER" maxHeight="300.0" minHeight="300.0" minWidth="-Infinity" prefHeight="300.0"
              prefWidth="610.0" styleClass="vbox-body" VBox.vgrow="ALWAYS">
            <children>
                <GridPane alignment="CENTER" hgap="10.0" vgap="10.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="-Infinity" minWidth="10.0" prefWidth="100.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="480.0"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints maxHeight="-Infinity" minHeight="10.0" prefHeight="50.0" vgrow="SOMETIMES"/>
                        <RowConstraints maxHeight="-Infinity" minHeight="10.0" prefHeight="50.0" vgrow="SOMETIMES"/>
                        <RowConstraints maxHeight="-Infinity" minHeight="10.0" prefHeight="50.0" vgrow="SOMETIMES"/>
                        <RowConstraints maxHeight="-Infinity" minHeight="10.0" prefHeight="50.0" vgrow="SOMETIMES"/>
                        <RowConstraints maxHeight="-Infinity" minHeight="10.0" prefHeight="100.0" vgrow="SOMETIMES"/>
                    </rowConstraints>
                    <children>
                        <Label text="Product" GridPane.halignment="LEFT"/>
                        <Label text="Description" GridPane.halignment="LEFT" GridPane.rowIndex="4"/>
                        <TextField fx:id="nameField" GridPane.columnIndex="1">
                            <GridPane.margin>
                                <Insets right="10.0"/>
                            </GridPane.margin>
                        </TextField>
                        <TextArea fx:id="descriptionArea" prefHeight="200.0" prefWidth="200.0" GridPane.columnIndex="1"
                                  GridPane.rowIndex="4">
                            <GridPane.margin>
                                <Insets right="10.0"/>
                            </GridPane.margin>
                        </TextArea>
                        <Label text="Is Fragile" GridPane.halignment="LEFT" GridPane.rowIndex="1"/>
                        <Label text="Unit Price" GridPane.halignment="LEFT" GridPane.rowIndex="2"/>
                        <TextField fx:id="priceField" GridPane.columnIndex="1" GridPane.rowIndex="2">
                            <GridPane.margin>
                                <Insets right="10.0"/>
                            </GridPane.margin>
                        </TextField>
                        <Label text="Quantity" GridPane.halignment="LEFT" GridPane.rowIndex="3"/>
                        <TextField fx:id="quantityField" GridPane.columnIndex="1" GridPane.rowIndex="3">
                            <GridPane.margin>
                                <Insets right="10.0"/>
                            </GridPane.margin>
                        </TextField>
                        <CheckBox fx:id="isFragileCheckBox" mnemonicParsing="false" text="CheckBox" GridPane.columnIndex="1"
                                  GridPane.rowIndex="1"/>
                    </children>
                </GridPane>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
            <VBox.margin>
                <Insets/>
            </VBox.margin>
        </VBox>
        <HBox alignment="CENTER_RIGHT" prefHeight="6.0" prefWidth="602.0" spacing="5.0" styleClass="bottom-bar"
              VBox.vgrow="NEVER">
            <children>
                <Button fx:id="saveButton" mnemonicParsing="false" onAction="#handleSave" prefHeight="54.0"
                        prefWidth="120.0" text="Save"/>
                <Button mnemonicParsing="false" onAction="#handleCancel" prefHeight="54.0" prefWidth="120.0"
                        text="Cancel">
                    <HBox.margin>
                        <Insets right="15.0"/>
                    </HBox.margin>
                </Button>
            </children>
            <padding>
                <Insets bottom="10.0" left="5.0" right="5.0" top="10.0"/>
            </padding>
            <VBox.margin>
                <Insets/>
            </VBox.margin>
        </HBox>
    </children>
</VBox>
